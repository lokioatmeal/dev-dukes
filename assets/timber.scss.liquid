  }

  li {
    margin-bottom: 0.4em;
  }
}

.rte--header {
  margin-bottom: 0;
}

/*============================================================================
  #Links and Buttons
==============================================================================*/
a,
.text-link {
  color: $colorLink;
  text-decoration: none;
  background: transparent;
}

a:hover,
a:focus {
  color: $colorLinkHover;
}

button {
  overflow: visible;
}

button[disabled],
html input[disabled] {
  cursor: default;
}

.btn,
.rte .btn {
  font-family: $altFontStack;
  text-transform: uppercase;
  font-size: 0.9rem;
  display: inline-block;
  padding: 8px 1.5rem;
  width: auto;
  margin: 0;
  line-height: 1.42;
  // font-weight: bold;
  font-weight: 400;
  text-decoration: none;
  text-align: center;
  vertical-align: middle;
  white-space: nowrap;
